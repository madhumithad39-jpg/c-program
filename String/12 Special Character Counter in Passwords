#include <stdio.h>
#include <string.h>
int main() {
    char s[100];
    int count = 0;
    scanf("%s", s);
    for(int i = 0; s[i] != '\0'; i++) {
        if (!(( s[i]>= 'a' && s[i] <= 'z') ||
             (s[i] >= 'A' && s[i] <= 'Z') ||
             (s[i] >= '0' && s[i] <= '9')))
            {
            count++;
            }
    }
    printf("%d", count);
    return 0;
}
