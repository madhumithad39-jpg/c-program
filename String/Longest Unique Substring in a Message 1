#include <stdio.h>
#include <string.h>
int main() {
    char s[100];
    int max = 0;
    scanf("%s", s);
    int n = strlen(s);
    for (int i = 0; i < n; i++) {
        int count = 0;
        int visited[256] = {0};
        for (int j = i; j < n; j++) {
            if (visited[s[j]] == 1)
                break;
            visited[s[j]] = 1;
            count++;
        }
        if (count > max)
            max = count;
    }
    printf("Longest substring length: %d", max);
    return 0;
}
