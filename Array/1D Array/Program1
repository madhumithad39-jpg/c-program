#include<stdio.h>
int main() {
    int n,s;
    scanf("%d",&n);
    int cs=0;
    int ms=0;
    int i=0;
    while(i<n) {
        scanf("%d",&s);
        if(s==0) {
            cs++;
            if (cs>ms) {
                ms=cs;
            }
        }
        else {
            cs=0;
        }
        i++;
    }
    printf("Longest Failure Streak: %d",ms);
    return 0;
}
