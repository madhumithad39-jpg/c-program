#include <stdio.h>
int main() {
    int r, c;
    scanf("%d %d", &r, &c);
    int arr[r][c];
    int a;
    int b ;
    for (int i = 0; i < r; i++) {
        int sum = 0;
        for (int j = 0; j < c; j++) {
            scanf("%d", &arr[i][j]);
            sum =sum+ arr[i][j];
        }
        if (i == 0) {
            a= sum;
        }
        if (sum < a) {
            a = sum;
            b = i;
        }
    }
    printf("%d", b);
    return 0;
}
