#include <stdio.h>
int main() {
    int r, c;
    scanf("%d %d", &r, &c);
    int a[r][c];
    for (int i = 0; i < r; i++) {
        for (int j = 0; j < c; j++) {
            scanf("%d", &a[i][j]);
        }
    }
    int Min[r];
    int Max[r];
    for (int i = 0; i < r; i++) {
        Min[i] = a[i][0];
        Max[i] = a[i][0];
        for (int j = 1; j < c; j++) {
            if (a[i][j] < Min[i]) {
                Min[i] = a[i][j];
            }
            if (a[i][j] > Max[i]) {
                Max[i] = a[i][j];
            }
        }
    }
    int max = 0;
    for (int i = 0; i < r; i++) {
        for (int j = i + 1; j < r; j++) {
            int d1 = Max[i] - Min[j];
            if (d1 < 0) {
                d1 = -d1;
            }
            int d2 = Max[j] - Min[i];
            if (d2 < 0) {
                d2 = -d2;
            }
            if (d1 > max) {
                max = d1;
            }
            if (d2 > max) {
                max= d2;
            }
        }
    }
    printf("%d", max);
    return 0;
}
