#include <stdio.h>
int main() {
    int r, c;
    scanf("%d %d", &r, &c);
    int a[r][c];
    for (int i = 0; i < r; i++) {
        for (int j = 0; j < c; j++) {
            scanf("%d", &a[i][j]);
        }
    }
    int min = 0;
    int row = 0;
    for (int i = 0; i < r; i++) {
        int sum = 0;
        for (int j = 0; j < c; j++) {
            sum = sum + a[i][j];
        }
        if (sum != 0) {
            if (min == 0) {
                min = sum;
                row= i;
            }
            if (sum < min) {
                min = sum;
                row = i;
            }
        }
    }
    printf("%d", row);
    return 0;
}
