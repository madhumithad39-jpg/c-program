#include <stdio.h>
int main() {
    int r, c;
    scanf("%d %d", &r, &c);
    int a[r][c];
    for (int i = 0; i < r; i++) {
        for (int j = 0; j < c; j++) {
            scanf("%d", &a[i][j]);
        }
    }
    int max = 0;
    int row = 0;
    for (int i = 0; i < r; i++) {
        int curr = 1;
        for (int j = 0; j < c - 1; j++) {
            int r1=a[i][j]%2;
            int r2=a[i][j+1]%2;
            if (r1 + r2 == 1) {
                curr++;
            } else {
                curr = 1;
            }
        }
        if (curr > max) {
            max = curr;
            row = i;
        }
    }
    printf("%d", row);
    return 0;
}
